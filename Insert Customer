/*
 * PSPEC:
 * File Name: insert_customer.c
 * Purpose: Menambahkan pelanggan baru ke sistem.
 * Inputs: Nama, Alamat, No HP dari input pengguna.
 * Outputs: Menyimpan ke array pelanggan.
 * Constraints: Semua input harus diisi.
 *
 * DPPL:
 * 1. Terima input dari pengguna.
 * 2. Validasi input.
 * 3. Simpan ke array 'customers'.
 */

#include <stdio.h>
#include <string.h>

struct Customer {
    char name[50];
    char address[100];
    char phone[15];
};

int main() {
    struct Customer customers[100];
    int count = 0;

    printf("Masukkan Nama: ");
    fgets(customers[count].name, 50, stdin);
    printf("Masukkan Alamat: ");
    fgets(customers[count].address, 100, stdin);
    printf("Masukkan No HP: ");
    fgets(customers[count].phone, 15, stdin);

    if(strlen(customers[count].name) > 1 && strlen(customers[count].address) > 1 && strlen(customers[count].phone) > 1) {
        printf("Pelanggan berhasil ditambahkan!\n");
        count++;
    } else {
        printf("Semua field harus diisi.\n");
    }

    return 0;
}
